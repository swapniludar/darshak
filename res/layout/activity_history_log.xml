<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollTableView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoryLogActivity" >

    <RelativeLayout
        android:id="@+id/historyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/logDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/logDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logDateLabel"
            android:text=""
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/nwTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logDateLabel"
            android:text="Network type:"
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/nwTypeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logDateLabel"
            android:layout_toRightOf="@id/nwTypeLabel"
            android:text=""
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/nwOperatorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nwTypeLabel"
            android:text="Network operator:"
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/nwOperatorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nwTypeLabel"
            android:layout_toRightOf="@id/nwOperatorLabel"
            android:text=""
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/eventLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nwOperatorLabel"
            android:text="Event:"
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <TextView
            android:id="@+id/eventValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nwOperatorLabel"
            android:layout_toRightOf="@id/eventLabel"
            android:text=""
            android:textColor="@color/default_color"
            android:textSize="@dimen/resultTextSize" />

        <LinearLayout
            android:id="@+id/historyInnerLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventLabel"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</ScrollView>